#welcome-title {
  // font-family: "matchbook", Courier, monospace;
  font-family: "1942", Courier, monospace;;

}

.navigation {
  list-style: none;
  margin: 0;
  padding: 0 1rem 0 0;
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-flow: row wrap;
  // justify-content: flex-start;
  justify-content: space-between;
}

.navigation a {
  display: block;
}

.centered {
  margin: 1rem 1rem 0 1rem;
}

.grid {
   display: grid;
   grid-gap: 10px;
   grid-template-columns: repeat(auto-fill, minmax(400px,1fr));
   // grid-auto-rows: 20px;
   grid-auto-rows: 1px;


}

.card {
  padding: 5px;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  margin: 0 1rem 1rem 0;
  background-color: var(--col-1-light)
}

/* On mouse-over, add a deeper shadow */
.card:hover {
  box-shadow: 0 8px 16px 0 var(--col-2-dark);
}

.card-image-33, .card-image-66, .card-image-100{
  display: block;
  height: auto;
  margin: 0.5rem auto 0.5rem auto;
}

.card-image-33 {
  max-width: 33%;
}

.card-image-66 {
  max-width: 66%;
}

.card-image-100 {
  max-width: 100%;
}

.card-header {
  text-align: center;
  background-color: var(--col-2-dark);
  padding: 0.2rem;
  font-weight: bold;
}

.card-body {
  padding: 0.5rem 0 0 0;

}

.card-footer {
  padding: 0.2rem;
  background-color: var(--col-1-light);
  text-align: center;
  font-size: smaller;
}
