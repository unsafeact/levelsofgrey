}


 * {
   margin:0;
   padding:0;
 }

 html, body {
   height:100vh;
   font-size: 16px;
   box-sizing: border-box;
   color: var(--col-1-text);
 }

 body {
    font-family: "Courier New", Courier, monospace;
    // font-family: "Verdana", Geneva, sans-serif;

    background-color: var(--col-1);
}


h1, h2, h3 {
   font-family: "Courier New", Courier, monospace;
   margin-top: 1rem;
 }

 h4, h5 {
    font-family: "Courier New", Courier, monospace;
    margin-top: 0.5rem;
  }

 h1 {
   text-align: center;
   margin-bottom: 2rem;

 }

 a {
   text-decoration-style: dotted;
   color: var(--col-1-text);
 }

 a:hover {
   font-weight: bold;
   text-decoration: underline;
   text-decoration-style: dotted;
   text-decoration-color: var(--col-2-dark);
 }

 header {
   padding: 1rem;
 }
